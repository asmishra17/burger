<ul>
    {{#each burgers}}
        {{#unless devoured}}
        <div class = "burger-div">
            <li>{{this.id}}. {{this.burger_name}}</li>
            <button class="devour-button" method="submit" name = "devoured" value = "1">Devour it</button>
        </div>
        {{/unless}}
    {{/each}}
</ul>

